{% extends 'base.html.twig' %}
{% block title %}Login
{% endblock %}
{% block body %}
	<div class="max-w-md h-[70vh] text-white flex flex-col justify-center mx-auto py-12">
		<h2 class="text-2xl  font-bold text-center">Create an account</h2>
		<form method="post" action="/auth/login" class="space-y-4">
			<div>
				<label class="block font-medium text-sm">Full Name</label>
				<input name="fullname" type="name" required class="mt-1 block bg-[#80008051] w-full rounded-md border-2 border-white p-2"/></div>
			<div>
				<label class="block font-medium text-sm">Email</label>
				<input name="email" type="email" required class="mt-1 block bg-[#80008051] w-full rounded-md border-2 border-white p-2"/></div>
			<div>
				<label class="block font-medium text-sm">Password</label>
				<input name="password" type="password" required class="mt-1 block bg-[#80008051] w-full rounded-md border-2 border-white p-2"/></div>
			<div class="flex items-center justify-between">
				<button type="submit" class="x-4 mt-4 py-2 bg-[#800080] text-white w-full rounded-md">Login</button>
			</div>
		</form>
	</div>

{% endblock %}
