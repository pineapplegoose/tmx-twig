{% extends 'base.html.twig' %}

{% block title %}Welcome!
{% endblock %}

{% block body %}
	<div class="text-center p-10">
		<h1 class="text-3xl font-bold text-blue-600">Hello from Twig ðŸ‘‹</h1>
		<p class="mt-4 text-gray-700">Your first Symfony + Twig page works!</p>
	</div>
{% endblock %}

{% for toast in app.flashes('toast') %}
	<script>
		document.addEventListener('DOMContentLoaded', () => {
document.dispatchEvent(new CustomEvent('show-toast', {
detail: {
message: {{ toast.message|json_encode|raw }},
type: {{ toast.type|json_encode|raw }}
}
}));
});
	</script>
{% endfor %}
