<div class="card p-4">
	<div class="flex justify-between items-start">
		<div>
			<h4 class="font-semibold">{{ ticket.title }}</h4>
			{% if ticket.description %}
				<p class="text-sm text-slate-600 mt-1">{{ ticket.description }}</p>
			{% endif %}
			<div class="mt-2">
				<span class="inline-block px-2 py-1 text-xs rounded {% if ticket.status == 'open' %}bg-green-100 text-green-800{% elseif ticket.status=='in_progress' %}bg-amber-100 text-amber-800{% else %}bg-slate-100 text-slate-700{% endif %}">{{ ticket.status }}</span>
				{% if ticket.priority %}
					<span class="inline-block px-2 py-1 text-xs rounded ml-2 bg-slate-50 text-slate-700">{{ ticket.priority }}</span>
				{% endif %}
			</div>
		</div>
		<div class="flex flex-col gap-2">
			<a href="/tickets/edit/{{ ticket.id }}" class="text-sm text-center px-2 py-1 text-[#800080] border-[#800080] border rounded">Edit</a>
			<form method="post" action="/tickets/delete/{{ ticket.id }}" onsubmit="return confirm('Delete this ticket?');">
				<button type="submit" class="text-sm px-2 py-1 border text-red-400 border-red-400 rounded">Delete</button>
			</form>
		</div>
	</div>
</div>
