{% extends 'base.html.twig' %}

{% block title %}Error
	{{ status_code }}
	-
	{{ status_text }}
{% endblock %}

{% block body %}
	<div class="flex items-center justify-center min-h-[70vh]">
		<div
			class="max-w-md w-full text-center">
			{# Error Code #}
			<div class="mb-6">
				<h1 class="text-8xl font-bold text-white mb-2">{{ status_code }}</h1>
				<h2 class="text-2xl font-semibold text-white/90">{{ status_text }}</h2>
			</div>

			{# Error Message #}
			<div class="card p-6 mb-6">
				<p class="text-slate-700 text-lg">{{ message }}</p>
			</div>

			{# Action Buttons #}
			<div class="flex gap-3 justify-center">
				<button onclick="history.back()" class="px-6 py-3 rounded-md border-2 border-[#800080] text-[#800080] hover:bg-[#800080] hover:text-white transition-colors">
					‚Üê Go Back
				</button>
				<a href="{{ path('app_home') }}" class="px-6 py-3 rounded-md bg-[#800080] text-white hover:bg-[#6b006b] transition-colors">
					Go Home
				</a>
			</div>
		</div>
	</div>
{% endblock %}
